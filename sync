# Check repo directory for new local_manifests
if [ ! -d .repo/local_manifests ]; then
	mkdir .repo/local_manifests
        BMC=`grep -rH 'BMc08GT' .repo/local_manifest.xml `
        if [ "BMC" != "" ]; then
		#  Using my local_manf so remove old deprecated one
		rm .repo/local_manifest.xml
	fi
fi

if [ ! -e platform_manifest/pick.sh ]; then
	curl -L -o .repo/local_manifests/local_manifest.xml -O -L https://raw.github.com/BMc08GT/local_manifest/master/default.xml
else
	curl -L -o .repo/local_manifests/local_manifest.xml -O -L https://raw.github.com/BMc08GT/local_manifest/master/butter.xml
fi


repo sync -j$(cat /proc/cpuinfo | grep "^processor" | wc -l)
# --------------------------------------------------- #
# Check if cm-10.1 branch needs to be updated
cd kernel/samsung/d2
git fetch cm && git checkout cm/cm-10.1
UPSTREAM=`git log --pretty=format:%H | tail -1 `
git checkout cm-10.1
LOCAL=`git log --pretty=format:%H | tail -1`

if [ UPSTREAM != LOCAL ]; then
	git pull cm cm-10.1
	echo "Updated cm-10.1 branch. Please push to github."
fi



